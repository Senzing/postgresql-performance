ALTER TABLE RES_FEAT_EKEY DROP CONSTRAINT res_feat_ekey_pkey;
DROP INDEX res_feat_ekey_pk;
DROP INDEX res_feat_ekey_sk;
CREATE INDEX RES_FEAT_EKEY_SK ON RES_FEAT_EKEY (RES_ENT_ID);
ALTER TABLE RES_FEAT_EKEY ADD PRIMARY KEY (LIB_FEAT_ID, RES_ENT_ID, UTYPE_CODE);


ALTER TABLE RES_FEAT_STAT DROP CONSTRAINT res_feat_stat_pkey;
DROP INDEX RES_FEAT_STAT_PK;
ALTER TABLE RES_FEAT_STAT ADD PRIMARY KEY (LIB_FEAT_ID);


ALTER TABLE RES_ENT DROP CONSTRAINT res_ent_pkey;
DROP INDEX RES_ENT_PK;
ALTER TABLE RES_ENT ADD PRIMARY KEY (RES_ENT_ID);


ALTER TABLE DSRC_RECORD DROP CONSTRAINT dsrc_record_pkey;
DROP INDEX dsrc_record_hk;
DROP INDEX dsrc_record_sk;
DROP INDEX dsrc_record_pk;
ALTER TABLE DSRC_RECORD ADD PRIMARY KEY (RECORD_ID, DSRC_ID);
CREATE INDEX DSRC_RECORD_SK ON DSRC_RECORD (ENT_SRC_KEY, DSRC_ID) ;


ALTER TABLE RES_REL_EKEY DROP CONSTRAINT res_rel_ekey_pkey;
DROP INDEX RES_REL_EKEY_PK;
ALTER TABLE RES_REL_EKEY ADD PRIMARY KEY (res_ent_id,rel_ent_id) INCLUDE (RES_REL_ID);


ALTER TABLE OBS_ENT DROP CONSTRAINT obs_ent_pkey;
DROP INDEX OBS_ENT_SK;
ALTER TABLE OBS_ENT ADD PRIMARY KEY (ENT_SRC_KEY,DSRC_ID);
CREATE INDEX OBS_ENT_SK ON OBS_ENT (OBS_ENT_ID);
